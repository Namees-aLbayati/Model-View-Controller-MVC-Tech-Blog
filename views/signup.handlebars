<form  style="border:1px solid rgb(122, 132, 151)" id="signupForm">
  <div class="container">
    <h1>Sign Up</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>
 <label><b>Username</b></label>
    <input type="text" placeholder="Enter Username" id="usernameF">
    <label for="email"><b>Email</b></label>

    <input type="email"  class="form-control" placeholder="Enter Email" name="email" required id="emailF">

     <label for="psw"><b>Password</b></label>
    <input type="password" placeholder="Enter Password" name="psw" required id="passwordF" minlength="8">

  

    


    <div class="clearfix">
      <button type="button" class="cancelbtn"> <a href='/'>  Cancel  </a></button>
      <button type="submit" class="signupbtn">Sign Up</button>
    </div>
  </div>
</form>

